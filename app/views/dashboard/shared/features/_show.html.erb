<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<div class="form-group">
  <label for="">Feature Id</label>
  <input type="text" name="input_feature_id" class="form-control" placeholder="Feature Id" required value="<%= @feature.feature_id %>">
</div>
<div class="form-group">
  <label for="">Feature Name</label>
  <input type="text" name="feature_name" class="form-control" placeholder="Feature Name" required value="<%= @feature.feature_name %>">
</div>
<div class="form-group">
  <label for="featureId">Description</label>
  <textarea name="description" class="form-control" placeholder="Description" ><%= @feature.description %></textarea>
</div>
<div class="form-group">
  <label for="">Is Rolled Out</label>
  <select name="is_rolled_out" class="form-control" required>
  	<% if @feature.is_rolled_out == true %>
  	<option value="true" selected>true</option>
  	<option value="false">false</option>
  	<% else %>
  	<option value="true">true</option>
  	<option value="false" selected>false</option>
  	<% end %>
  </select>
</div>
<button type="submit" class="btn btn-success">Save</button>