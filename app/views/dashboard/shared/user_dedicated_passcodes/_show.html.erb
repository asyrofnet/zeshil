<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<div class="form-group">
  <label for="">#ID</label>
  <input type="text" name="passcode_id" class="form-control" placeholder="Passcode Id" required value="<%= @passcode.id %>" readonly>
</div>
<div class="form-group">
  <label for="">User phone number</label>
  <% user = ::User.find(@passcode.user_id) %>
  <input type="text" name="user_phone_number" class="form-control" placeholder="User Phone Number" required value="<%= user.phone_number %>">
</div>
<div class="form-group">
  <label for="">Passcode</label>
  <input type="text" name="passcode" class="form-control" placeholder="Passcode" required value="<%= @passcode.passcode %>">
</div>
<button type="submit" class="btn btn-success">Save</button>