<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<div class="form-group">
 <div class="col-xs-12">
  <label>Features</label>
  <select multiple name="features[]" class="form-control">
    <% Feature.where(application_id: @application.id).each do | feature | %>
    <% if @user_features_id.include?(feature.id) %>
    <option value="<%= feature.id %>" selected><%= feature.feature_id %></option>
    <% else %>
    <option value="<%= feature.id %>"><%= feature.feature_id %></option>
    <% end %>
    <% end %>
  </select>
</div>
</div>

<div class="form-group">
 <div class="col-xs-12">
  <br>
  <button class="btn btn-lg btn-success" type="submit"> Save</button>
</div>
</div>