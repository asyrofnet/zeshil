<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>

<div class="btn-group pull-right" role="group">
  <a href="/dashboard/super_admin/application" class="btn btn-primary">Back to list application</a>
</div>

<div class="clear"></div>
<br>
<br>

<form action="/dashboard/super_admin/application" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-group">
    <label for="appName">Application Name</label>
    <input type="text" name="app_name" class="form-control" id="appName" placeholder="Application Name (Only Alphabet)" required>
  </div>
  <div class="form-group">
    <label for="appId">Application ID (in Qiscus SDK)</label>
    <input disabled type="text" name="app_id" class="form-control" id="appId" placeholder="This field will auto populate" required>
  </div>
  <div class="form-group">
    <label for="qiscusSecret">Qiscus SDK secret</label>
    <input disabled type="text" name="qiscus_sdk_secret" class="form-control" id="qiscusSecret" placeholder="This field will auto populate" required>
  </div>
  <div class="form-group">
    <label for="desc">Description</label>
    <textarea name="description" class="form-control" id="desc" placeholder="Description"></textarea>
  </div>
  <div class="form-group">
    <label for="appName">SMS Sender</label>
    <input type="text" name="sms_sender" class="form-control" id="smsSender" placeholder="SMS Sender" required>
  </div>
  <div class="form-group">
    <label for="appName">Server Key</label>
    <input type="text" name="server_key" class="form-control" id="serverKey" placeholder="Server Key" >
  </div>
  <div class="form-group">
    <label for="appName">FCM Key</label>
    <input type="text" name="fcm_key" class="form-control" id="fcmKey" placeholder="FCM Key" >
  </div>
  <div class="form-group">
    <label for="appName">APNS Cert Dev</label>
    <input type="text" name="apns_cert_dev" class="form-control" id="apnsCertDev" placeholder="APNS Cert Dev" >
  </div>
  <div class="form-group">
    <label for="appName">APNS Cert Prod</label>
    <input type="text" name="apns_cert_prod" class="form-control" id="apnsCertProd" placeholder="APNS Cert Prod" >
  </div>
  <div class="form-group">
    <label for="appName">APNS Cert Topic</label>
    <input type="text" name="apns_cert_topic" class="form-control" id="apnsCertTopic" placeholder="APNS Cert Topic" >
  </div>
  <div class="form-group">
    <label for="appName">APNS Cert Password</label>
    <input type="text" name="apns_cert_password" class="form-control" id="apnsCertPassword" placeholder="APNS Cert Password" >
  </div>
  <div class="form-group">
    <label for="">Auto Add Friend</label>
    <select name="is_auto_friend" class="form-control" required>
      <option value="TRUE">True</option>
      <option value="FALSE" selected>False</option>
    </select>
  </div>
  <div class="form-group">
    <label for="">Send Message PN</label>
    <select name="is_send_message_pn" class="form-control" required>
      <option value="TRUE">True</option>
      <option value="FALSE" selected>False</option>
    </select>
  </div>
  <div class="form-group">
    <label for="">Send Call PN</label>
    <select name="is_send_call_pn" class="form-control" required>
      <option value="TRUE">True</option>
      <option value="FALSE" selected>False</option>
    </select>
  </div>
  <div class="form-group">
    <label for="">Coaching Module</label>
    <select name="is_coaching_module_connected" class="form-control" required>
      <option value="TRUE">True</option>
      <option value="FALSE" selected>False</option>
    </select>
  </div>
  <button type="submit" class="btn btn-success">Save</button>
</form>
