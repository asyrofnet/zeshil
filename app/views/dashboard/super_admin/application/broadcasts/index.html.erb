<% if flash[:success] %>
<div class="alert alert-success"><%= flash[:success] %></div>
<% end %>

<% if flash[:notice] %>
<div class="alert alert-warning"><%= flash[:notice] %></div>
<% end %>
<div class="btn-group pull-right" role="group">
  <a href="/dashboard/super_admin/application/<%= @application.id %>" class="btn btn-primary">Back to detail application</a>
  <a href="/dashboard/super_admin/application/<%= @application.id %>/broadcasts/show_chat_users" class="btn btn-success">Show users by chat rooms</a>
  <a href="/dashboard/super_admin/application/<%= @application.id %>/broadcasts/show_status" class="btn btn-warning">Broadcasts status</a>
</div>
<br><br>
<div class="row">
  <form class="form" action="/dashboard/super_admin/application/<%= @application.id %>/broadcasts" method="post">
  <%= render "/dashboard/shared/broadcasts/add-remove" %>
  </form>
  <%= render "/dashboard/shared/broadcasts/list" %>
